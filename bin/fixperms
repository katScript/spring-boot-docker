#!/bin/bash
echo "Correcting filesystem permissions..."

if [ -z "$1" ]; then
  bin/r-jdknotty find /var/www/ views/dist views/public -type f -exec chmod u+w {} \;
  bin/r-nodejsnotty find /var/www/html/views dist public -type f -exec chmod u+w {} \;
else
  bin/r-jdknotty find $1 -type f -exec chmod u+w {} \;
  bin/r-jdknotty find $1 -type d -exec chmod u+w {} \;
  bin/r-nodejsnotty find $1 -type f -exec chmod u+w {} \;
  bin/r-nodejsnotty find $1 -type d -exec chmod u+w {} \;
fi

echo "Filesystem permissions corrected."