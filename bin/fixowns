#!/bin/bash
echo "Correcting filesystem ownerships..."

if [ -z "$1" ]; then
  bin/r-jdknotty chown -R app:app /var/www/
  bin/r-nodejsnotty chown -R app:app /var/www/html
else
  bin/r-jdknotty chown -R app:app /var/www/html/$1
  bin/r-nodejsnotty chown -R app:app /var/www/html/views/$1
fi

echo "Filesystem ownerships corrected."