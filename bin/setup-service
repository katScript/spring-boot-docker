#!/bin/bash

docker-compose exec -T server mvn install
docker-compose exec -T server mvn clean package
docker-compose exec -T -u root server mv /tmp/springboot-service/springboot.service /etc/systemd/system/
docker-compose exec -T -u root server ln -s /var/www/html/target/springboot-service.jar /etc/init.d/springboot
docker-compose exec -T -u root /etc/systemd/system/springboot.service start

bin/restart